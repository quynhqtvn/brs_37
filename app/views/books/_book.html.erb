<div class="col-md-12">
  <div class="row">
    <div class="col-md-12" id="post">
      <div class="row">
        <div class="col-md-12">
          <% @books.each do |book| %>
          <div>
            <h4>
              <strong><%= link_to book.title, book_path(book.id) %></strong>
            </h4>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12" id="post-header-line">
            <span class="glyphicon glyphicon-book"></span>
              <%= book.category.name %> |
            <span class="glyphicon glyphicon-calendar"></span>
              <%= l book.created_at,format: :short %> |
            <span class="glyphicon glyphicon-comment"></span>
              <%= t "comments" %> |
            <i class="glyphicon glyphicon-heart"></i>
              <%= t "favorite" %>|
            <span class="glyphicon glyphicon-tags"></span>
              <%= t "tags" %> :
            <% book.tags.each do |tag| %>
              <%= link_to tag.name, root_path(tag: tag.name),
                class: "label label-info", id: "tag-color" %>
            <% end %>
          </div>
        </div>
        <div class="row" id="post-content">
          <div class="col-md-3">
            <%= image_tag book.book_img.url(:book_show), class: "img-responsive"%>
          </div>
          <div class="col-md-9">
            <p>
              <%= book.description %>
            </p>
            <p>
              <%= link_to t("readmore"), book_path(book.id) , class: "btn btn-read-more",
                id: "btn-read-more" %>
            </p>
          </div>
        </div>
        <%= will_paginate @books %>
        <% end %>
    </div>
  </div>
</div>
